<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BIODATA MAHASISWA UNISKA"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingBottom="20dp"
        android:textColor="@color/teal_700"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        />
    <EditText
        android:id="@+id/namaEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Silahkan isi Nama Lengkap..."
        android:inputType="textPersonName"
        android:layout_marginBottom="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NPM"
        />
    <EditText
        android:id="@+id/npmEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Silahkan isi NPM..."
        android:inputType="number"
        android:layout_marginBottom="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kelas"
        />
    <EditText
        android:id="@+id/kelasEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Silahkan isi Kelas..."
        android:inputType="textPersonName"
        android:layout_marginBottom="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mata Kuliah"
        />
    <EditText
        android:id="@+id/matkulEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Silahkan isi Mata Kuliah..."
        android:inputType="text"
        android:layout_marginBottom="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hobi"
        />
    <EditText
        android:id="@+id/hobiEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Silahkan isi Hobi..."
        android:inputType="text"
        android:layout_marginBottom="8dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        >
        <Button
            android:id="@+id/simpanButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:backgroundTint="@color/info"
            android:drawableLeft="@drawable/ic_baseline_save_24"
            android:layout_marginEnd="5dp"
            ></Button>
        <Button
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:backgroundTint="@color/red"
            android:drawableLeft="@drawable/ic_baseline_format_clear_24"
            android:layout_marginEnd="5dp"
            ></Button>
        <Button
            android:id="@+id/batalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/warning"
            android:drawableLeft="@drawable/ic_baseline_cancel_24"
            android:text="Exit"

            ></Button>
    </LinearLayout>


</LinearLayout>

